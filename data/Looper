LooperRole := role {
    create: initializer(),
    loop: action(),
}

Looper := LooperRole { create = create, loop = loop }

create := initializer() {
    self = Null {};
}

loop := action(this) {
    cancel;
    self = Wait { this = this };
    wait(1);
    self = Null {};
    BANG;
    this_arg = copy(this);
    this.loop(this_arg);
}

