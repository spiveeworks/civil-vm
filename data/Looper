LooperRole := role {
    create: initializer(),
    loop: action(),
}

Looper := LooperRole { create = create, loop = loop }

create := initializer() {
    self = Null {};
}

loop := action() {
    cancel;
    self = Wait {};
    wait(1);
    self = Null {};
    BANG;
    this = Looper(self);
    this.loop();
}

